<!-- fashion section start -->
<div class="fashion_section">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <h1 class="fashion_taital">Man & Woman Fashion</h1>
                    <div class="fashion_section_2">
                        <div class="row">
                            <% for(let i=0; i < allProducts.length; i++){ const product = allProducts[i]; %>
                                <div class="col-lg-4 col-sm-4">
                                    <div class="box_main">
                                        <h4 class="shirt_text"><%= product.title; %></h4>
                                        <p class="price_text">Price <span style="color: #262626;"><%= product.price; %> â‚¹ </span></p>
                                        <div class="tshirt_img"><img src="<%= product.path; %>"></div>
                                        <div class="btn_main">
                                            <div class="buy_bt"><button onclick="return addToCart('<%= product.id; %>')">Add To Cart</button></div>
                                            <div class="seemore_bt"><a href="#">See More</a></div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function addToCart(productId) {
        console.log("productId", productId);
        $.ajax({
            url: "/add-to-cart",
            method: "POST",
            data: { productId },
            success: function (result) {
                console.log("result", result);
            },
            error: function (error) {
                
            }
        })
    }
</script>